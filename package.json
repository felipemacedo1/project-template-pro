{
  "name": "project-template-pro",
  "version": "1.0.0",
  "description": "Template open-source completo com padrões modernos de desenvolvimento, CI/CD e documentação.",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "echo 'Build script - customize as needed'",
    "dev": "node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "format": "prettier --write '**/*.{js,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,json,md,yml,yaml}'",
    "precommit": "npm run lint && npm run format:check && npm test",
    "prepare": "node -e \"console.log('Setup complete!')\""
  },
  "keywords": [
    "template",
    "open-source",
    "ci-cd",
    "github-actions",
    "best-practices"
  ],
  "author": "Felipe Macedo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipemacedo1/project-template-pro.git"
  },
  "bugs": {
    "url": "https://github.com/felipemacedo1/project-template-pro/issues"
  },
  "homepage": "https://github.com/felipemacedo1/project-template-pro#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  }
}
